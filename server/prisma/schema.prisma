// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String      @id @default(uuid())
  email             String      @unique
  password          String
  name              String
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt
  
  // Relationships
  journals          Journal[]
  habits            Habit[]
  habitCompletions  HabitCompletion[]
  moods             Mood[]
  sleepSessions     SleepSession[]
  soundscapePlays   SoundscapePlay[]
  reflections       Reflection[]
  
  @@map("users")
}

model Journal {
  id              String    @id @default(uuid())
  userId          String
  title           String?
  content         String
  mood            String    // calm, anxious, happy, sad, angry, excited, peaceful, stressed
  moodIntensity   Int       @default(5) // 1-10
  tags            String[]  // array of tags
  wordCount       Int       @default(0)
  isVoice         Boolean   @default(false)
  hasPhoto        Boolean   @default(false)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId, createdAt])
  @@map("journals")
}

model Habit {
  id              String    @id @default(uuid())
  userId          String
  title           String
  description     String?
  icon            String    @default("ðŸŽ¯")
  gradient        String    @default("from-purple-400 to-pink-400")
  category        String    // morning, evening, anytime
  timeOfDay       String?   // e.g., "8:00 AM"
  isActive        Boolean   @default(true)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  completions     HabitCompletion[]
  
  @@index([userId, isActive])
  @@map("habits")
}

model HabitCompletion {
  id              String    @id @default(uuid())
  userId          String
  habitId         String
  completedAt     DateTime  @default(now())
  note            String?
  
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  habit           Habit     @relation(fields: [habitId], references: [id], onDelete: Cascade)
  
  @@unique([habitId, completedAt])
  @@index([userId, completedAt])
  @@map("habit_completions")
}

model Mood {
  id              String    @id @default(uuid())
  userId          String
  mood            String    // calm, anxious, happy, sad, angry, excited, peaceful, stressed
  intensity       Int       // 1-10
  note            String?
  triggers        String[]  // array of trigger descriptions
  createdAt       DateTime  @default(now())
  
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId, createdAt])
  @@map("moods")
}

model SleepSession {
  id              String    @id @default(uuid())
  userId          String
  bedTime         DateTime
  wakeTime        DateTime
  duration        Float     // hours
  quality         Float     // 0-10
  deepSleep       Float     // percentage
  remSleep        Float     // percentage
  lightSleep      Float     // percentage
  note            String?
  createdAt       DateTime  @default(now())
  
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId, bedTime])
  @@map("sleep_sessions")
}

model SoundscapePlay {
  id              String    @id @default(uuid())
  userId          String
  soundscape      String    // rainforest, ocean, space, fireplace
  duration        Int       // seconds
  volume          Float     // 0-1
  playedAt        DateTime  @default(now())
  
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId, playedAt])
  @@map("soundscape_plays")
}

model Reflection {
  id              String    @id @default(uuid())
  userId          String
  title           String
  content         String
  mood            String
  intensity       Int       // 1-10
  tags            String[]
  peaceScore      Float     @default(5.0) // 0-10
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId, createdAt])
  @@map("reflections")
}
